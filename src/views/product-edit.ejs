<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/bootstrapHead") %>
    <%- include ("./partials/headerRegister") %>
    <main class="productCreate--main">
            <form method="POST" action="/products/edit/<%= product.id %>?_method=PUT" class="bootstrap__form--container" enctype="multipart/form-data">
                <div class="container text-center">
                    <div class="row">
                      <div class="col-sm">
                        <label class="form-label">Nombre del Producto</label>
                        <input type="text" class="form-control" name="name" value=<%= product.name %>>
                      </div>
                      <div class="col-sm">
                        <label class="form-label">Precio</label>
                        <input type="text" class="form-control" name="price" value=<%= product.price %>>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm">
                        <label class="form-label">Descuento</label>
                        <input type="text" class="form-control" name="discount" value=<%= product.discount%>>
                      </div>
                      <div class="col-sm">
                        <label class="form-label">Categoria</label>
                        <input type="text" class="form-control" name="category">
                     </div>
                    </div>
                    <div>
                        <label class="form-label">Descripci√≥n</label>
                        <textarea class="form-control"  rows="3" name="description"></textarea>
                    </div>

                    <div class="col-sm">
                      <label class="form-label">Imagen del producto</label>
                      <input class="form-control" type="file" name="img">
                    </div>
                    <div class="row">
                        <div class="col-sm">
                            <button type="submit" class="btn btn-primary">Editar producto</button>
                        </div>
                        <div class="col-sm">
                            <button type="reset" class="btn btn-danger">Cancelar</button>
                        </div>
                    </div>
                </div>
            </form>
    </main>
    <%- include ("./partials/footer") %>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>